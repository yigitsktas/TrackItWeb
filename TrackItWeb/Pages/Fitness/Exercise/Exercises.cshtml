@page
@model TrackItWeb.Pages.Fitness.Exercise.ExercisesModel
@{
	ViewData["Title"] = "exercises.";

}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Fitness/Index">fitness</a></li>
		<li class="breadcrumb-item active" aria-current="page">exercises</li>
	</ol>
</nav>


<div class="row">
	<div class="col-xl-8 col-6">
		<h2 class="fw-bold">my exercises.</h2>
	</div>
	<div class="col-xl-4 col-6">
		<a class="btn btn-dark btn-sm rounded-0 float-end" type="submit" href="/Fitness/Exercise/Add">create new exercise.</a>
	</div>
</div>

<form method="post">
	<div class="row">
		<div class="col-xl-12 col-12">
			<p>
				<button class="btn btn-transparent btn-sm rounded-0 mt-3" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
					<img style="height: 10px; width:10px; margin-bottom:3px;" src="~/filter.png" /><span class="fw-bold" style="font-size:14px"> Filters</span>
				</button>
			</p>
			<div class="collapse" id="collapseExample">
				<div class="card card-body border-0">
					<div class="row float-start">
						<div class="col-xl-4 col-4">
							<label class="form-label text-dark float-start fw-bold">exercise name.</label>
							<input type="text" class="form-control form-control-sm border-2 rounded-0 bg-transparent text-dark fw-bold" name="username" />
						</div>
						<div class="col-xl-5 col-5" style="margin-top: 28.5px">
							<button class="btn btn-dark btn-sm rounded-0 float-start" type="submit">filter.</button>
							<button class="btn btn-dark btn-sm rounded-0 float-start" style="margin-left: 20px" type="submit">remove filters.</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		@foreach (var item in Model.Index_VM)
		{
			<div class="col-xl-3 col-sm-4 col-6 mt-3">
				<div class="card border-2 border-dark" style="width: 16rem;">
					<div class="card-body">
						<div class="row">
							<div class="col-9">
								<h5 class="card-title"><a class="text-dark" href="/Fitness/Exercise/Details?guid=@item.GUID">@item.WorkoutName.ToLower()</a></h5>
							</div>
							<div class="col-3 mb-2">
								<button class="btn btn-outline-danger btn-sm border-0 rounded-0 float-end" asp-route-id="@item.MSWorkoutID" type="submit" data-toggle="tooltip" onclick="return confirm('are you sure?');" data-original-title="Delete" asp-page-handler="Delete">X</button>
							</div>
						</div>
						<div class="row mt-3">
						</div>
						<div class="row mt-1">
							<div class="col-8">
								<p class="card-text fw-bold">created by: you</p>
							</div>
							<div class="col-4">
								<a class="btn btn-outline-dark border-2 btn-sm rounded-0 fw-bold float-end" asp-route-guid="@item.GUID" asp-page="/Fitness/Exercise/Details">➔</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</form>