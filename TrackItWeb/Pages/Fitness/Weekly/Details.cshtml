@page
@model TrackItWeb.Pages.Fitness.Weekly.WorkoutDetailsModel
@{
	ViewData["Title"] = "details.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Fitness/Index">fitness</a></li>
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Fitness/Weekly/Weekly">weekly exercises</a></li>
		<li class="breadcrumb-item active" aria-current="page">@Model.Index_VM.WorkoutName.ToLower()</li>
	</ol>
</nav>

<h1><b>@Model.Index_VM.WorkoutName.ToLower().</b></h1>
<h2><b>muscle group:</b> @Model.Index_VM.MuscleGroup.ToLower(). </h2>
<h2><b>workout type:</b> @Model.Index_VM.WorkoutType.ToLower()</h2>

<h5 class="mt-3"><b>difficulty.</b></h5>
<div class="progress mb-3">
	@{
		int level = 0;

		level = 20 * Model.Index_VM.Difficulty;
	}
	<div class="progress-bar bg-dark" style="width: @level%" aria-valuenow="@Model.Index_VM.Difficulty">
	</div>
</div>
<hr class='mt-3 mb-3' />
<p style="font-size:20px"><b>description:</b> @Model.Index_VM.Description</p>
<hr class='mt-3' />
<div class="mt-3">
	<h4><b>created by:</b> TRACKIT</h4>
</div>
<hr class='mt-3 mb-3' />
<div class="float-start mt-3">
	<p class="fw-bold">video</p>
	<iframe width="430" height="240" src="@Model.Index_VM.Link" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>
