@page
@model TrackItWeb.Pages.Nutrient.AddLogModel
@{
	ViewData["Title"] = "add log.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Nutrient/Index">health</a></li>
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Nutrient/Logs">logs</a></li>
		<li class="breadcrumb-item active" aria-current="page">add log</li>
	</ol>
</nav>

<form method="post">
	<div class="row mt-3">
		<div class="col-xl-3 col-sm-6 col-4">
			<label class="form-label text-dark float-start fw-bold" for="ddl">nutrient.</label>
			<select id="ddl" class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-items="Model.Nutrients" asp-for="addLogDM.NutrientID">
			</select>
		</div>
		<div class="col-xl-3 col-sm-6 col-3">
			<label class="form-label text-dark float-start fw-bold" for="a">serving type.</label>
			<select id="a" class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.ServingType">
				<option value="1">x</option>
				<option value="2">x</option>
				<option value="3">x</option>
				<option value="4">x</option>
			</select>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-xl-6 col-6 mt-1">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">portions (gr / ml).</label>
			<input type="text" id="typeEmailX" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.Portions" />
		</div>
		<div class="col-xl-6 col-12 mt-1">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">notes.</label>
			<textarea type="text" id="typeEmailX" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.Notes"></textarea>
		</div>
	</div>
	<div class="mt-5 d-flex justify-content-center">
		<button class="btn btn-dark btn-md rounded-0 float-end" type="submit">create.</button>
	</div>
</form>


<script>
	$(document).ready(function () {
		$('#ddl').select2();
	});
</script>

















