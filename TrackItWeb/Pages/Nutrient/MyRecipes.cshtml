@page
@model TrackItWeb.Pages.Nutrient.MyRecipesModel
@{
	ViewData["Title"] = "my recipes.";
}
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Nutrient/Index">health</a></li>
		<li class="breadcrumb-item active" aria-current="page">my recipes</li>
	</ol>
</nav>

<div class="row">
	<div class="col-xl-8 col-6">
		<h2 class="fw-bold">my recipes.</h2>
	</div>
	<div class="col-xl-4 col-6">
		<a class="btn btn-dark btn-sm rounded-0 float-end" href="/Nutrient/AddRecipe">create new recipe.</a>
	</div>
</div>

<form method="get">
	<div class="row">
		@foreach (var item in Model.IndexVM)
		{
			<div class="col-xl-3 col-sm-4 col-6 mt-3">
				<div class="card border-2 border-dark" style="width: 16rem;">
					<div class="card-body">
						<h5 class="card-title text-center"><a class="text-dark" href="/Nutrient/RDetails?id=item.RecipeID">@item.Summary.ToLower()</a></h5>
						<div class="row mt-3 d-flex justify-content-center">
							<div class="col-4">
								<p style="font-size:12px">prep time: @item.PrepTime min.</p>
							</div>
							<div class="col-4">
								<p style="font-size:12px">cook time: @item.CookTime min.</p>
							</div>
							<div class="col-4">
								<p style="font-size:12px">serve size:<br> @item.Serve ppl.</p>
							</div>
						</div>
						<div class="row">
							<div class="col-8">
								<p class="card-text fw-bold p-2 mt-2">created by: you</p>
							</div>
							<div class="col-4">
								<a class="btn btn-outline-dark border-2 btn-sm m-3 rounded-0 fw-bold" asp-route-id="@item.RecipeID" asp-page="/Nutrient/RDetails">➔</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</form>