@page
@model TrackItWeb.Pages.Nutrient.LogsModel
@{
	ViewData["Title"] = "logs.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Nutrient/Index">health</a></li>
		<li class="breadcrumb-item active" aria-current="page">logs</li>
	</ol>
</nav>

<div class="row">
	<div class="col-xl-8 col-6">
		<h2 class="fw-bold">logs.</h2>
	</div>
	<div class="col-xl-4 col-6">
		<a class="btn btn-dark btn-sm rounded-0 float-end" href="/Nutrient/AddLog">create new log.</a>
	</div>
</div>

<div class="row">
	@foreach (var item in Model.Index)
	{
		<div class="col-xl-3 col-sm-4 col-6  mt-3">
			<div class="card border-2 border-dark" style="width: 16rem;">
				<div class="card-body">
					<h5 class="card-title text-center"><a class="text-dark" href="/Nutrient/LogDetails?id=@item.MemberNutrientID">@item.NutrientName.ToLower()</a></h5>
					<div class="row mt-3">
						<div class="col-12">
							<p class="text-center" style="font-size:13px">total calorie: @item.TotalCalorie cal.</p>
						</div>
		@*				<div class="col-6">
							<p style="font-size:12px">created date:<br> @item.CreatedDate.ToShortDateString().</p>
						</div>*@
					</div>
					<div class="row">
						<div class="col-8">
							<p class="card-text fw-bold p-2">created date: @item.CreatedDate.ToShortDateString()</p>
						</div>
						<div class="col-4">
							<a class="btn btn-outline-dark border-2 btn-sm m-3 rounded-0 fw-bold" asp-route-id="@item.MemberNutrientID" asp-page="/Nutrient/LogDetails">➔</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
