@page
@model TrackItWeb.Pages.Workout.ExercisesModel
@{
	ViewData["Title"] = "exercises.";

}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Workout/Index">fitness</a></li>
		<li class="breadcrumb-item active" aria-current="page">exercises</li>
	</ol>
</nav>


<div class="row">
	<div class="col-xl-8 col-6">
		<h2 class="fw-bold">my exercises.</h2>
	</div>
	<div class="col-xl-4 col-6">
		<a class="btn btn-dark btn-sm rounded-0 float-end" type="submit" href="/Workout/MSWAddNew">create new exercise.</a>
	</div>
</div>


<div class="row">
	@foreach (var item in Model.Index_VM)
	{
		<div class="col-xl-3 col-sm-4 col-6 d-flex justify-content-center mt-3">
			<div class="card border-2 border-dark" style="width: 16rem;">
				<div class="card-body">
					<h5 class="card-title text-center"><a class="text-dark" href="/Workout/WDetails?id=@item.MSWorkoutID">@item.WorkoutName.ToLower()</a></h5>
					<div class="row mt-3">
					</div>
					<div class="row">
						<div class="col-8">
							<p class="card-text fw-bold p-2">created by: @User.Identity.Name</p>
						</div>
						<div class="col-4">
							<a class="btn btn-outline-dark border-2 btn-sm m-3 rounded-0 fw-bold" asp-route-id="@item.MSWorkoutID" asp-page="/Workout/WDetails">➔</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>