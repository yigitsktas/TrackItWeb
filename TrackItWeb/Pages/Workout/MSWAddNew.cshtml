@page 
@model TrackItWeb.Pages.Workout.MSWAddNewModel
@{
	ViewData["Title"] = "add new workout.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Workout/Index">fitness</a></li>
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Workout/Exercises">exercises</a></li>
		<li class="breadcrumb-item active" aria-current="page">create new exercise</li>
	</ol>
</nav>

<h2 class="fw-bold">add new exercise.</h2>

<form method="post">
	<div class="row mt-3">
		<div class="col-xl-3 col-sm-6 col-6">
			<label class="form-label text-dark float-start fw-bold" for="a">workout type.</label>
			<select id="a" class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-items="Model.WorkoutTypes" asp-for="workoutAddDM.WorkoutTypeID">
			</select>
		</div>
		<div class="col-xl-3 col-sm-6 col-6">
			<label class="form-label text-dark float-start fw-bold" for="a">muscle group.</label>
			<select id="a" class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-items="Model.MuscleGroups" asp-for="workoutAddDM.MuscleGroupID">
			</select>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-xl-4  col-12 mt-1">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">workout name.</label>
			<input type="text" id="typeEmailX" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="workoutAddDM.WorkoutName" />
		</div>
		<div class="col-xl-4 col-12 mt-1">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">youtube link.</label>
			<input type="text" id="typeEmailX" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="workoutAddDM.Link" />
		</div>
		<div class="col-xl-4 col-12 mt-1">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">description.</label>
			<textarea type="text" id="typeEmailX" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="workoutAddDM.Description"></textarea>
		</div>
	</div>

	<div class="mt-3 d-flex justify-content-center">
		<button class="btn btn-dark btn-md rounded-0 float-end" type="submit">create.</button>
	</div>
</form>

