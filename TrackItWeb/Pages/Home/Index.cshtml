@page
@model TrackItWeb.Pages.Home.IndexModel
@{
	ViewData["Title"] = "TRACKIT - welcome.";
	Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/" asp-append-version="true" />

@if (User.Identity?.IsAuthenticated == true)
{
	<div class="container-fluid text-center">
		<h1 class="text-dark fw-bold" style="font-size: 40px;">hi, welcome back @User.Identity.Name</h1>
		<h3 class="text-dark fw-bold mt-3">continue your journey.</h3>
	</div>
	<div class="row mt-3">
		<div class="col-xl-6 col-12 mt-3">
			<p id="demo" class="fw-bold text-center" style="font-size: 35px"></p>
		</div>
		<div class="col-xl-6 col-12 mt-3">
			<p class="fw-bold text-center mt-2" style="font-size: 28px;">🌤 23C° Istanbul</p>
		</div>
	</div>
	<div class="row mt-3 p-2">
		<div class="col-xl-6 col-6 mt-3 d-flex justify-content-center">
			<a class="btn btn-outline-dark border-2 btn-lg rounded-0 fw-bold" href="/Fitness/Index">fitness ➔</a>
		</div>
		<div class="col-xl-6 col-6 mt-3 d-flex justify-content-center">
			<a class="btn btn-outline-dark border-2 btn-lg rounded-0 fw-bold" href="/Health/Index">health ➔</a>
		</div>
	</div>
	<div class="row" style="margin-top:10px"></div>
	<div class="row mt-3">
		<div class="col d-flex justify-content-center mt-3">
			<div class="card border-2 rounded-0 border-dark" style="width: 25rem;   border-radius:2em;">
				<div class="card-header text-white rounded-0" style="background-color: black">
					<p class="fw-bold m-2 text-center">exercises you will like.</p>
				</div>
				<ul class="list-group list-group-flush fw-bold">
					@foreach (var item in Model.MyModel.Workouts)
					{
						<li class="list-group-item">@item.WorkoutName.ToLower()<a class="btn btn-outline-dark border-2 btn-sm rounded-0 fw-bold float-end" href="/Fitness/Weekly/Details?guid=@item.GUID">➔</a></li>
					}
				</ul>
			</div>
		</div>
		<div class="col d-flex justify-content-center mt-3">
			<div class="card border-2 rounded-0 border-dark" style="width: 25rem;">
				<div class="card-header text-white rounded-0" style="background-color: black">
					<p class="fw-bold m-2 text-center">recipes you will like.</p>
				</div>
				<ul class="list-group list-group-flush fw-bold">
					@foreach (var item in Model.MyModel.Recipes)
					{
						<li class="list-group-item">@item.Summary.ToLower()<a class="btn btn-outline-dark border-2 btn-sm rounded-0 fw-bold float-end" href="/Health/Recipe/Details?guid=@item.GUID">➔</a></li>
					}
				</ul>
			</div>
		</div>
	</div>
	<script>
		setInterval(myTimer, 1000);

		function myTimer() {
			const d = new Date();
			document.getElementById("demo").innerHTML = d.toLocaleTimeString();
		}
	</script>
}
else
{ 
	<div class="container-fluid text-center ">
		<h1 class="text-dark fw-bold mb-3" style="font-size: 50px">welcome</h1>
		<h3 class="text-dark fw-bold mt-3">start your journey.</h3>
		<h3 class="text-dark fw-bold">track it. burn it.</h3>
		<div class="row mt-5">
			<div class="col-xl-6 col-6 mt-3 d-flex justify-content-center">
				<a class="btn btn-outline-dark border-2 btn-lg rounded-0 fw-bold" href="/Authentication/Login">login.</a>
			</div>
			<div class="col-xl-6 col-6 mt-3 d-flex justify-content-center">
				<a class="btn btn-outline-dark border-2 btn-lg rounded-0 fw-bold" href="/Authentication/Register">register.</a>
			</div>
		</div>
		<div class="row text-center p-4">
			<div class="col-xl-6 col-12 mt-3">
				<div class="card text-center border-2 rounded-0 border-dark">
					<div class="card-header fw-bolder rounded-0 " style="background-color: black">
						<h3 class="text-white">gym logs.</h3>
					</div>
					<div class="card-body">
						<h5 class="card-title">log your workouts easily.</h5>
					</div>
				</div>
			</div>
			<div class="col-xl-6 col-12 mt-3">
				<div class="card text-center border-2 rounded-0 border-dark">
					<div class="card-header fw-bolder rounded-0" style="background-color: black">
						<h3 class="text-white">recipes.</h3>
					</div>
					<div class="card-body">
						<h5 class="card-title">recipes that will you love are here.</h5>
					</div>
				</div>
			</div>
			<div class="col-xl-6 col-12 mt-3">
				<div class="card text-center border-2 rounded-0 border-dark">
					<div class="card-header fw-bolder rounded-0" style="background-color: black">
						<h3 class="text-white">progress.</h3>
					</div>
					<div class="card-body">
						<h5 class="card-title">see your progress with graphs.</h5>
					</div>
				</div>
			</div>
			<div class="col-xl-6 col-12 mt-3">
				<div class="card text-center border-2 rounded-0 border-dark">
					<div class="card-header fw-bolder rounded-0" style="background-color: black">
						<h3 class="text-white">AI coach.</h3>
					</div>
					<div class="card-body">
						<h5 class="card-title">ask questions to our integrated AI.</h5>
					</div>
				</div>
			</div>

		</div>
	</div>
}

