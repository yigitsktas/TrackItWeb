@page
@model TrackItWeb.Pages.Health.MyRecipe.RDetailsModel
@{
	ViewData["Title"] = "recipe details. // " + Model.Index_VM.Title.ToLower();
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Health/Index">health</a></li>
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Health/MyRecipe/MyRecipes">my recipes</a></li>
		<li class="breadcrumb-item active" aria-current="page">@Model.Index_VM.Title.ToLower()</li>
	</ol>
</nav>

<h1><b>@Model.Index_VM.Title.ToLower().</b></h1>
<h2><b>prep time:</b> @Model.Index_VM.PrepTime min. // <b>cook time:</b> @Model.Index_VM.CookTime min. </b></h2>
<h3><b>serving size</b>: @Model.Index_VM.Serve.</h3>
<h4><b>season:</b> @Model.Index_VM.Season</h4>
<h5><b>health level.</b></h5>
<hr class='mt-3 mb-3' />
<div class="progress">
	@{
		int level = 0;

		level = 20 * Model.Index_VM.HealthLevel;
	}
	<div class="progress-bar bg-dark" style="width: @level%" aria-valuenow="@Model.Index_VM.HealthLevel">
	</div>
</div>
<div class="mt-4"></div>
<p style="font-size:20px"><b>ingreditens:</b><br> @Html.Raw(Model.Index_VM.Ingredients)</p>
<hr class='mt-3 mb-3' />
<div class="mt-4"></div>
<p style="font-size:20px"><b>directions:</b><br> @Model.Index_VM.Directions</p>
<div class="float-end mt-3">
</div>
