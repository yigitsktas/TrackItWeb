@page
@model RecipesModel
@{
	ViewData["Title"] = "recipes.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Health/Index">health</a></li>
		<li class="breadcrumb-item active" aria-current="page">recipes</li>
	</ol>
</nav>

<h2 class="fw-bold"> recipes.</h2>

<div class="row">
	<div class="col-xl-12 col-12">
		<p>
			<button class="btn btn-transparent btn-sm rounded-0 mt-3" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
				<img style="height: 10px; width:10px; margin-bottom:3px;" src="~/filter.png" /><span class="fw-bold" style="font-size:14px"> Filters</span>
			</button>
		</p>
		<div class="collapse" id="collapseExample">
			<div class="card card-body border-0">
				<div class="row float-start">
					<div class="col-xl-4 col-4">
						<label class="form-label text-dark float-start fw-bold">nutrient name.</label>
						<input type="text" class="form-control form-control-sm border-2 rounded-0 bg-transparent text-dark fw-bold" name="username" />
					</div>
					<div class="col-xl-1 col-3">
						<label class="form-label text-dark float-start fw-bold">order by.</label>
						<select id="" style="width: 100px; height:29px" class="form-control-sm border border-2 rounded-0 bg-transparent text-dark fw-bold">
							<option class="text-dark" value="date-asc" selected>created date ascending</option>
							<option class="text-dark" value="date-desc">created date ascending</option>
							<option class="text-dark" value="cal-asc">calorie ascending</option>
							<option class="text-dark" value="cal-desc">calorie date ascending</option>
						</select>
					</div>
					<div class="col-xl-5 col-5" style="margin-top: 28px">
						<button class="btn btn-dark btn-sm rounded-0 float-start" type="submit">filter.</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row p-2">
	@foreach (var item in Model.Index_VM)
	{
		<div class="col-xl-3 col-sm-4 col-6 mt-3">
			<div class="card border-2 border-dark" style="width: 16rem;">
				<div class="card-body">
					<h5 class="card-title text-center"><a class="text-dark" href="/Nutrient/RDetails?id=@item.RecipeID">@item.Title.ToLower()</a></h5>
					<div class="row mt-3">
						<div class="col-4">
							<p style="font-size:12px">prep time: @item.PrepTime min.</p>
						</div>
						<div class="col-4">
							<p style="font-size:12px">cook time: @item.CookTime min.</p>
						</div>
						<div class="col-4">
							<p style="font-size:12px">serve size:<br> @item.Serve ppl.</p>
						</div>
					</div>
					<div class="row">
						<div class="col-8">
							<p class="card-text fw-bold p-2">created by: @item.CreatedBy</p>
						</div>
						<div class="col-4">
							<a class="btn btn-outline-dark border-2 btn-sm m-3 rounded-0 fw-bold" asp-route-id="@item.RecipeID" asp-page="/Nutrient/RDetails">➔</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>