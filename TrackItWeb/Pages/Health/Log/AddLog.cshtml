@page
@model TrackItWeb.Pages.Health.Log.AddLogModel
@{
	ViewData["Title"] = "add log.";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Health/Index">health</a></li>
		<li class="breadcrumb-item" aria-current="page"><a class="text-decoration-none text-dark" href="/Health/Log/Logs">logs</a></li>
		<li class="breadcrumb-item active" aria-current="page">add log</li>
	</ol>
</nav>

<form method="post">
	<div class="row mt-3">
		<div class="col-xl-2 col-sm-6 col-4">
			<div class="row">
				<div class="col-xl-12 col-sm-6 col-12">
					<label class="form-label text-dark float-start fw-bold" for="ddl">nutrient.</label>
				</div>
				<div class="col-xl-12 col-sm-12 col-12">
					<select id="ddl" style="height:28px " class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-items="Model.Nutrients" asp-for="addLogDM.NutrientID" required>
					</select>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-5">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">portions (gr / ml).</label>
			<input type="number" class="form-control form-control-sm border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.Portions" required />
		</div>
		<div class="col-xl-5 col-sm-6 col-3">
			<div class="row">
				<div class="col-xl-12 col-sm-12 col-12">
					<label class="form-label text-dark float-start fw-bold" for="a">serving type.</label>
				</div>
				<div class="col-xl-12 col-sm-6 col-3">
					<select id="a" style="height:28px; width: 60px" class="form-control-md border border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.ServingType">
						<option value="1">ml</option>
						<option value="2">gr</option>
					</select>
				</div>
			</div>
		</div>
		<div class="col-xl-12 col-12 mt-3">
			<label class="form-label text-dark float-start fw-bold" for="typeEmailX">notes.</label>
			<textarea type="text" class="form-control form-control-md border-2 rounded-0 bg-transparent text-dark fw-bold" asp-for="addLogDM.Notes"></textarea>
		</div>
	</div>

	<div class="row mt-3">
	</div>
	<div class="mt-5 d-flex justify-content-center">
		<button class="btn btn-dark btn-md rounded-0 float-end" type="submit">create.</button>
	</div>
</form>
<script>
	$(document).ready(function () {
		$('#ddl').select2();
	});
</script>

















